<UserControl x:Class="SubHero.PointOfSale.PaymentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubHero.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="680">
    <Border BorderBrush="Black" BorderThickness="2" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                      Text="Order Summary" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,20"/>

            <!-- Order Items List -->
            <GroupBox Grid.Row="1" 
                     Header="Order Items" 
                     Padding="10" 
                     Margin="0,0,0,20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding OrderItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" 
                                       BorderThickness="0,0,0,1" 
                                       Padding="5" 
                                       Margin="0,5">
                                    <StackPanel>
                                        <!-- Item Name and Price -->
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" 
                                                      FontWeight="Bold" 
                                                      FontSize="14"
                                                      Width="400"/>
                                            <TextBlock Text="{Binding Price, StringFormat='${0:F2}'}" 
                                                      FontSize="14"
                                                      FontWeight="Bold"/>
                                        </StackPanel>

                                        <!-- Preparation Information -->
                                        <ItemsControl ItemsSource="{Binding PreparationInformation}"
                                                     Margin="10,2,0,0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" 
                                                              FontSize="11" 
                                                              Foreground="Gray"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>

            <!-- Payment Section -->
            <StackPanel Grid.Row="2">
                <!-- Order Totals -->
                <GroupBox Header="Order Totals" Padding="10" Margin="0,0,0,20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Subtotal: " FontSize="18" Width="150"/>
                            <TextBlock Text="{Binding Subtotal, StringFormat='${0:F2}'}" 
                                      FontSize="18" 
                                      FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Tax: " FontSize="18" Width="150"/>
                            <TextBlock Text="{Binding Tax, StringFormat='${0:F2}'}" 
                                      FontSize="18" 
                                      FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Total: " FontSize="20" Width="150"/>
                            <TextBlock Text="{Binding Total, StringFormat='${0:F2}'}" 
                                      FontSize="20" 
                                      FontWeight="Bold"
                                      Foreground="DarkGreen"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Payment Input -->
                <GroupBox Header="Payment" Padding="10" Margin="0,0,0,20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Amount Paid: $" 
                                      FontSize="18" 
                                      Width="150"
                                      VerticalAlignment="Center"/>
                            <TextBox x:Name="PaidTextBox" 
                                    FontSize="18" 
                                    Width="150" 
                                    Height="35"
                                    VerticalContentAlignment="Center">
                                <TextBox.Text>
                                    <Binding Path="Paid" 
                                            UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <ExceptionValidationRule/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,15,0,5">
                            <TextBlock Text="Change: " 
                                      FontSize="20" 
                                      Width="150"
                                      FontWeight="Bold"/>
                            <TextBlock Text="{Binding Change, StringFormat='${0:F2}'}" 
                                      FontSize="20" 
                                      FontWeight="Bold"
                                      Foreground="Green"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Finalize Payment Button -->
                <Button x:Name="FinalizePaymentButton"
                       Content="Finalize Payment and Print Receipt" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Height="50"
                       Margin="0,0,0,10"
                       Background="LightGreen"
                       IsEnabled="{Binding IsPaymentValid}"
                       Click="FinalizePaymentButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>