<Window x:Class="SubHero.PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SubHero.PointOfSale"
        mc:Ignorable="d"
        Title="Sub Hero Point of Sale" Height="720" Width="1080">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="680"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Left Side: Swappable Content (Menu or Customization) -->
        <Border x:Name="ContentBorder" Grid.Column="0" Grid.Row="0">
            <!-- Menu Selection (initially visible) -->
            <local:MenuItemSelectionControl x:Name="MenuSelection" Visibility="Visible"/>
        </Border>

        <!-- Order Summary (Right Side) -->
        <local:OrderSummaryControl x:Name="OrderSummary" 
                                  Grid.Column="1" 
                                  Grid.Row="0"/>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" 
                   Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="CancelOrderButton" Content="Cancel Order" 
                   Width="150" Height="40" Margin="10" FontSize="16"/>
            <Button x:Name="CompleteOrderButton" Content="Complete Order" 
                   Width="150" Height="40" Margin="10" FontSize="16"/>
            <Button x:Name="BackToMenuButton" Content="Back to Menu" 
                   Width="150" Height="40" Margin="10" FontSize="16"
                   Click="BackToMenuButton_Click"/>
        </StackPanel>
    </Grid>
</Window>