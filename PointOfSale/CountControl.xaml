<UserControl x:Class="SubHero.PointOfSale.CountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubHero.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150">
    <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="DecrementButton" Content="-" Grid.Column="0" 
                    Width="30" Height="30" FontSize="18" Click="DecrementButton_Click"/>

            <TextBox x:Name="CountTextBox" Grid.Column="1" 
                     Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="16" TextAlignment="Center" VerticalContentAlignment="Center"
                     Margin="5,0,5,0" IsReadOnly="True"/>

            <Button x:Name="IncrementButton" Content="+" Grid.Column="2" 
                    Width="30" Height="30" FontSize="18" Click="IncrementButton_Click"/>
        </Grid>
    </Border>
</UserControl>