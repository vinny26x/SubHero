<UserControl x:Class="SubHero.PointOfSale.EntreeCustomizationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubHero.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Border BorderBrush="DarkGray" BorderThickness="2" Padding="20">
        <StackPanel>
            <!-- Menu Item Info Control -->
            <local:MenuItemInfoControl DataContext="{Binding}"/>

            <!-- Customization Options -->
            <GroupBox Header="Size" Margin="0,20,0,0" Padding="10">
                <ComboBox ItemsSource="{Binding SizeOptions}"
                         SelectedItem="{Binding Size}"
                         FontSize="16"
                         Margin="5"/>
            </GroupBox>

            <GroupBox Header="Bread" Margin="0,10,0,0" Padding="10">
                <ComboBox ItemsSource="{Binding BreadOptions}"
                         SelectedItem="{Binding Bread}"
                         FontSize="16"
                         Margin="5"/>
            </GroupBox>

            <!-- Ingredients Section -->
            <GroupBox Header="Ingredients" Margin="0,10,0,0" Padding="10">
                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding AvailableIngredients}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" 
                                         IsChecked="{Binding Included}"
                                         FontSize="14"
                                         Margin="5,3"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>

            <!-- Make it a Combo Button -->
            <Button x:Name="MakeItComboButton" 
                    Content="Make it a Combo" 
                    FontSize="16" 
                    FontWeight="Bold"
                    Height="40"
                    Margin="0,20,0,0"
                    Click="MakeItComboButton_Click"
                    Background="LightGreen"/>
        </StackPanel>
    </Border>
</UserControl>