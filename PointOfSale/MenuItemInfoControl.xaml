<UserControl x:Class="SubHero.PointOfSale.MenuItemInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubHero.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5">
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="{Binding Description}" FontSize="14" FontStyle="Italic" TextWrapping="Wrap" Margin="0,5,0,5"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Calories: " FontSize="14"/>
                <TextBlock Text="{Binding Calories}" FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>