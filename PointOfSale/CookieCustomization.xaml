<UserControl x:Class="SubHero.PointOfSale.CookiesCustomizationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubHero.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Border BorderBrush="DarkGray" BorderThickness="2" Padding="20">
        <StackPanel>
            <!-- Menu Item Info Control -->
            <local:MenuItemInfoControl DataContext="{Binding}"/>

            <!-- Customization Options -->
            <GroupBox Header="Flavor" Margin="0,20,0,0" Padding="10">
                <ComboBox ItemsSource="{StaticResource cookieFlavors}"
                         SelectedItem="{Binding Flavor}"
                         FontSize="16"
                         Margin="5"/>
            </GroupBox>

            <GroupBox Header="Count" Margin="0,10,0,0" Padding="10">
                <StackPanel>
                    <TextBlock Text="Number of Cookies (2-6):" FontSize="14" Margin="0,0,0,5"/>
                    <local:CountControl Value="{Binding CookieCount, Mode=TwoWay}" 
                                       Minimum="2" 
                                       Maximum="6"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Border>
</UserControl>