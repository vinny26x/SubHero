<UserControl x:Class="SubHero.PointOfSale.ComboCustomizationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubHero.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Border BorderBrush="DarkGray" BorderThickness="2" Padding="20">
        <StackPanel>
            <!-- Menu Item Info Control -->
            <local:MenuItemInfoControl DataContext="{Binding}"/>

            <!-- Entree Selection -->
            <GroupBox Header="Entree" Margin="0,20,0,0" Padding="10">
                <StackPanel>
                    <ComboBox x:Name="EntreeTypeComboBox"
                             FontSize="14"
                             Margin="5"
                             SelectionChanged="EntreeTypeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Custom Sandwich" Tag="CustomSandwich"/>
                        <ComboBoxItem Content="California Club Wrap" Tag="CaliforniaClubWrap"/>
                        <ComboBoxItem Content="Club Sub" Tag="ClubSub"/>
                        <ComboBoxItem Content="Italian Sub" Tag="ItalianSub"/>
                        <ComboBoxItem Content="Mediterranean Wrap" Tag="MediterraneanWrap"/>
                        <ComboBoxItem Content="Turkey Cranberry" Tag="TurkeyCranberry"/>
                        <ComboBoxItem Content="Veggie Sandwich" Tag="VeggieSandwich"/>
                    </ComboBox>

                    <TextBlock x:Name="EntreeNameTextBlock" 
                              Text="Custom Sandwich" 
                              FontSize="14" 
                              Margin="5"
                              FontWeight="Bold"/>

                    <Button Content="Edit Entree" 
                           Height="35"
                           Margin="5"
                           Click="EditEntree_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Side Selection -->
            <GroupBox Header="Side" Margin="0,10,0,0" Padding="10">
                <StackPanel>
                    <ComboBox x:Name="SideTypeComboBox"
                             FontSize="14"
                             Margin="5"
                             SelectionChanged="SideTypeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Apple" Tag="Apple"/>
                        <ComboBoxItem Content="Chips" Tag="Chips" IsSelected="True"/>
                        <ComboBoxItem Content="Cookies" Tag="Cookies"/>
                        <ComboBoxItem Content="Side Salad" Tag="SideSalad"/>
                    </ComboBox>

                    <TextBlock x:Name="SideNameTextBlock" 
                              Text="Chips" 
                              FontSize="14" 
                              Margin="5"
                              FontWeight="Bold"/>

                    <Button Content="Edit Side" 
                           Height="35"
                           Margin="5"
                           Click="EditSide_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Drink Selection -->
            <GroupBox Header="Drink" Margin="0,10,0,0" Padding="10">
                <StackPanel>
                    <ComboBox x:Name="DrinkTypeComboBox"
                             FontSize="14"
                             Margin="5"
                             SelectionChanged="DrinkTypeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Fountain Drink" Tag="FountainDrink" IsSelected="True"/>
                        <ComboBoxItem Content="Iced Tea" Tag="IcedTea"/>
                        <ComboBoxItem Content="Lemonade" Tag="Lemonade"/>
                    </ComboBox>

                    <TextBlock x:Name="DrinkNameTextBlock" 
                              Text="Fountain Drink - Medium Coke" 
                              FontSize="14" 
                              Margin="5"
                              FontWeight="Bold"/>

                    <Button Content="Edit Drink" 
                           Height="35"
                           Margin="5"
                           Click="EditDrink_Click"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Border>
</UserControl>